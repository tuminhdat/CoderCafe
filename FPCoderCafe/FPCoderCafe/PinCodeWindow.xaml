<Window x:Class="FPCoderCafe.PinCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FPCoderCafe"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Height="150" Width="150">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" FocusManager.FocusedElement="{Binding ElementName=PinCodePasswordBox}">
        <PasswordBox  Name="PinCodePasswordBox" Width="100" Height="40" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button x:Name="OKButton" Content="OK" Width="100" Height="40" Margin="5"/>
    </StackPanel>
</Window>
